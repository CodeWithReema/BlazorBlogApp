@page
@model BlogApp.Pages.CreatePostModel
@{
    ViewData["Title"] = "Create New Post";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Create New Blog Post
                    </h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <h5>Please correct the following errors:</h5>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="NewPost.Title" class="form-label fw-bold">Title</label>
                            <input asp-for="NewPost.Title" class="form-control form-control-lg" 
                                   placeholder="Enter your blog post title..." />
                            <span asp-validation-for="NewPost.Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPost.Content" class="form-label fw-bold">Content</label>
                            <textarea asp-for="NewPost.Content" class="form-control" rows="10" 
                                      placeholder="Write your blog post content here..."></textarea>
                            <span asp-validation-for="NewPost.Content" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Blog" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Blog
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Publish Post
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 