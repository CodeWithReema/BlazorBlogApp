@page
@model BlogApp.Pages.BlogModel
@{
    ViewData["Title"] = "Blog Posts";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4">Blog Posts</h1>
                <a href="/CreatePost" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Post
                </a>
            </div>

            @if (!Model.Posts.Any())
            {
                <div class="alert alert-info">
                    <h4 class="alert-heading">No posts yet!</h4>
                    <p>Be the first to create a blog post.</p>
                    <hr>
                    <a href="/CreatePost" class="btn btn-primary">Create Your First Post</a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">@post.Title</h5>
                                    <p class="card-text text-muted">
                                        @(post.Content.Length > 150 ? post.Content.Substring(0, 150) + "..." : post.Content)
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar"></i>
                                            @post.CreatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i>
                                            @post.CreatedAt.ToString("HH:mm")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div> 